<!DOCTYPE html>
<html>
  <head>
    <% include partials/header.ejs %>
  </head>
  <body>
    <div class="hero" style="background-image: url('/images/home_poster.jpg')">
      <div class="title">
        <h2><%= title %></h2>
      </div>
    </div>
    
    <div class="container">
      <% movies.forEach(function(movie) { %>
        <div class="col-md-4 content-padding">
          <img src="/images/<%= movie.poster %>" class="movie-poster">
        </div>
      <% }); %>
    </div>
    
    <% include partials/scripts.ejs %>
  </body>
</html>
